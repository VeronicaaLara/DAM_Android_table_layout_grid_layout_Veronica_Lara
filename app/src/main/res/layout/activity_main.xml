<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:background="@color/light_grey">




        <ImageView
            android:id="@+id/close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/close" />

        <TextView
            android:id="@+id/texto_cabecera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_toRightOf="@+id/close"
            android:gravity="right"
            android:text="clear"
            android:textColor="@color/black"/>

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:background="@color/light_grey">


        <TextView
            android:id="@+id/texto_dia1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="322dp"
            android:layout_marginBottom="50dp"
            android:gravity="left"
            android:text="Wed"
            android:textSize="25dp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/texto_dia2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="9dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="50dp"
            android:gravity="left"
            android:text="Sat"
            android:textSize="25dp"
            android:textColor="@color/black"/>


        <TextView
            android:id="@+id/texto_fecha1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/texto_dia1"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="46dp"
            android:layout_marginEnd="312dp"
            android:layout_marginBottom="50dp"
            android:gravity="left"
            android:text="13 Oct"
            android:textSize="20dp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/texto_fecha2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/texto_dia2"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="46dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="-1dp"
            android:layout_marginBottom="50dp"
            android:gravity="right"
            android:text="15 Oct"
            android:textSize="20dp"
            android:textColor="@color/black"/>

    </RelativeLayout>


    <TableLayout
        android:id="@+id/tablasemana"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:shrinkColumns="7"
        android:stretchColumns=",">

        <TableRow
            android:id="@+id/tabla"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dip">



            <TextView
                android:id="@+id/semana"
                android:text=" S  M  T  W  T  F  S "
                android:textColor="@color/red" />
        </TableRow>



    </TableLayout>








</LinearLayout>